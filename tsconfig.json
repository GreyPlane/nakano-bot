{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "./target",
    "incremental": true,
    "tsBuildInfoFile": "./buildCache/cache",
    "allowJs": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules/",
    "dist/",
  ],
  "include": [
    "src/**/*.ts",
  ],
}

